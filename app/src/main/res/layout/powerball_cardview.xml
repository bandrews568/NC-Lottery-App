<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#E6E6E6"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp"
    card_view:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView17"
            app:layout_constraintTop_toBottomOf="@+id/guideline5"
            app:srcCompat="@drawable/ball"
            tools:layout_editor_absoluteY="56dp" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView16"
            app:layout_constraintTop_toBottomOf="@+id/guideline5"
            app:srcCompat="@drawable/ball"
            tools:layout_editor_absoluteY="56dp" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView15"
            app:layout_constraintTop_toBottomOf="@+id/guideline5"
            app:srcCompat="@drawable/ball"
            tools:layout_editor_absoluteY="56dp" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView14"
            app:layout_constraintTop_toBottomOf="@+id/guideline5"
            app:srcCompat="@drawable/ball"
            tools:layout_editor_absoluteY="56dp" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline5"
            app:srcCompat="@drawable/ball"
            tools:layout_editor_absoluteY="56dp" />

        <SurfaceView
            android:id="@+id/surfaceView3"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:background="@android:color/holo_red_dark"
            app:layout_constraintLeft_toRightOf="@+id/imageView18"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline5" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="*Date*"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/tvGameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:text="Powerball"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/tvBall1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="$"
            app:layout_constraintBottom_toBottomOf="@+id/imageView14"
            app:layout_constraintLeft_toLeftOf="@+id/imageView14"
            app:layout_constraintRight_toLeftOf="@+id/imageView15"
            app:layout_constraintTop_toTopOf="@+id/guideline5"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1" />

        <TextView
            android:id="@+id/tvBall2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="$"
            app:layout_constraintBottom_toBottomOf="@+id/imageView15"
            app:layout_constraintLeft_toLeftOf="@+id/imageView15"
            app:layout_constraintRight_toLeftOf="@+id/imageView16"
            app:layout_constraintTop_toTopOf="@+id/guideline5"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintRight_creator="1" />

        <TextView
            android:id="@+id/tvBall3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="$"
            app:layout_constraintBottom_toBottomOf="@+id/imageView16"
            app:layout_constraintLeft_toLeftOf="@+id/imageView16"
            app:layout_constraintRight_toLeftOf="@+id/imageView17"
            app:layout_constraintTop_toTopOf="@+id/guideline5"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/tvBall4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="$"
            app:layout_constraintBottom_toBottomOf="@+id/imageView17"
            app:layout_constraintLeft_toLeftOf="@+id/imageView17"
            app:layout_constraintRight_toLeftOf="@+id/imageView18"
            app:layout_constraintTop_toTopOf="@+id/guideline5"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1" />

        <TextView
            android:id="@+id/tvBall5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="$"
            app:layout_constraintBottom_toBottomOf="@+id/imageView18"
            app:layout_constraintLeft_toLeftOf="@+id/imageView18"
            app:layout_constraintRight_toRightOf="@+id/imageView18"
            app:layout_constraintTop_toTopOf="@+id/guideline5"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1" />

        <TextView
            android:id="@+id/tvPowerball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="$"
            app:layout_constraintBottom_toBottomOf="@+id/surfaceView3"
            app:layout_constraintLeft_toLeftOf="@+id/surfaceView3"
            app:layout_constraintRight_toRightOf="@+id/surfaceView3"
            app:layout_constraintTop_toTopOf="@+id/surfaceView3"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/tvPowerplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="$"
            app:layout_constraintBaseline_toBaselineOf="@+id/powerplayLabel"
            app:layout_constraintLeft_toRightOf="@+id/powerplayLabel"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_dark"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/powerplayLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:text="Powerplay:"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvGameName" />

        <Button
            android:id="@+id/btnPastResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="past results"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView14" />

        <Button
            android:id="@+id/btnSmartPicks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="smart picks"
            app:layout_constraintBaseline_toBaselineOf="@+id/btnPastResults"
            app:layout_constraintLeft_toRightOf="@+id/btnPastResults" />

    </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>