<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#E6E6E6"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp"
    card_view:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView12"
            app:layout_constraintTop_toBottomOf="@+id/guideline4"
            app:srcCompat="@drawable/ball"
            tools:layout_editor_absoluteY="60dp" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView11"
            app:layout_constraintTop_toBottomOf="@+id/guideline4"
            app:srcCompat="@drawable/ball"
            tools:layout_editor_absoluteY="60dp" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView10"
            app:layout_constraintTop_toBottomOf="@+id/guideline4"
            app:srcCompat="@drawable/ball"
            tools:layout_editor_absoluteY="60dp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView9"
            app:layout_constraintTop_toBottomOf="@+id/guideline4"
            app:srcCompat="@drawable/ball"
            tools:layout_editor_absoluteY="60dp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline4"
            app:srcCompat="@drawable/ball"
            tools:layout_editor_absoluteY="60dp" />

        <SurfaceView
            android:id="@+id/surfaceView2"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:background="@android:color/holo_red_dark"
            app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintLeft_toRightOf="@+id/imageView13"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline4"
            tools:layout_editor_absoluteY="67dp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="*Date*"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/tvGameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:text="Mega Millions"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/tvBall1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="$"
            app:layout_constraintBottom_toBottomOf="@+id/imageView9"
            app:layout_constraintLeft_toLeftOf="@+id/imageView9"
            app:layout_constraintRight_toLeftOf="@+id/imageView10"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1" />

        <TextView
            android:id="@+id/tvBall2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="$"
            app:layout_constraintBottom_toBottomOf="@+id/imageView10"
            app:layout_constraintLeft_toLeftOf="@+id/imageView10"
            app:layout_constraintRight_toLeftOf="@+id/imageView11"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/tvBall3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="$"
            app:layout_constraintBottom_toBottomOf="@+id/imageView11"
            app:layout_constraintLeft_toLeftOf="@+id/imageView11"
            app:layout_constraintRight_toLeftOf="@+id/imageView12"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1" />

        <TextView
            android:id="@+id/tvBall4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="8dp"
            android:text="$"
            app:layout_constraintBottom_toBottomOf="@+id/imageView12"
            app:layout_constraintLeft_toLeftOf="@+id/imageView12"
            app:layout_constraintRight_toLeftOf="@+id/imageView13"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/tvBall5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="$"
            app:layout_constraintBottom_toBottomOf="@+id/imageView13"
            app:layout_constraintLeft_toLeftOf="@+id/imageView13"
            app:layout_constraintRight_toRightOf="@+id/imageView13"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1" />

        <TextView
            android:id="@+id/tvMegaball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="MB"
            app:layout_constraintBottom_toBottomOf="@+id/surfaceView2"
            app:layout_constraintLeft_toLeftOf="@+id/surfaceView2"
            app:layout_constraintRight_toRightOf="@+id/surfaceView2"
            app:layout_constraintTop_toTopOf="@+id/surfaceView2"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/tvMultiplier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="MU"
            app:layout_constraintBaseline_toBaselineOf="@+id/multipilerLabel"
            app:layout_constraintLeft_toRightOf="@+id/multipilerLabel"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="72dp" />

        <TextView
            android:id="@+id/multipilerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:text="Multiplier:"
            app:layout_constraintBottom_toTopOf="@+id/guideline4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvGameName" />

        <Button
            android:id="@+id/btnPastResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="past results"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" />

        <Button
            android:id="@+id/btnSmartPicks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="smart picks"
            app:layout_constraintLeft_toRightOf="@+id/btnPastResults"
            app:layout_constraintTop_toBottomOf="@+id/imageView11" />

    </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>