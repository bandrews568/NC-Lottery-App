        android:layout_marginTop="8dp"
        android:text="Top 3 hot numbers on digit 3:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDigitTwo" />

    <TextView
