        app:layout_constraintLeft_toLeftOf="@+id/guideline7"
        app:layout_constraintTop_toBottomOf="@+id/tvSmartPickFive" />

    <TextView
        android:id="@+id/tvSmartPickSeven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline7"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSmartPickSix" />

    <TextView
        android:id="@+id/tvSmartPickEight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@+id/guideline7"
        app:layout_constraintTop_toBottomOf="@+id/tvSmartPickSeven" />

    <TextView
        android:id="@+id/tvSmartPickNine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
