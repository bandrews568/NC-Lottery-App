<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvGame"
        android:layout_alignBottom="@+id/tvGame"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:text="*Date*"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="13dp"
        android:text="Lucky For Life"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvBall1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvGame"
        android:layout_alignStart="@+id/tvGame"
        android:layout_below="@+id/tvGame"
        android:layout_marginTop="19dp"
        android:text="$" />

    <TextView
        android:id="@+id/tvBall2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvBall1"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/tvBall1"
        android:layout_toRightOf="@+id/tvBall1"
        android:text="$" />

    <TextView
        android:id="@+id/tvBall3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:layout_alignBaseline="@+id/tvBall2"
        android:layout_alignBottom="@+id/tvBall2"
        android:layout_toRightOf="@+id/tvBall2"
        android:layout_toEndOf="@+id/tvBall2"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <TextView
        android:id="@+id/tvBall4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignBaseline="@+id/tvBall3"
        android:layout_alignBottom="@+id/tvBall3"
        android:layout_toRightOf="@+id/tvBall3"
        android:layout_toEndOf="@+id/tvBall3" />

    <TextView
        android:id="@+id/tvBall5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:layout_alignBaseline="@+id/tvBall6"
        android:layout_alignBottom="@+id/tvBall6"
        android:layout_alignRight="@+id/tvGame"
        android:layout_alignEnd="@+id/tvGame" />

    <TextView
        android:id="@+id/tvBall6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:layout_alignBaseline="@+id/tvBall4"
        android:layout_alignBottom="@+id/tvBall4"
        android:layout_toRightOf="@+id/tvGame"
        android:layout_toEndOf="@+id/tvGame"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />
</RelativeLayout>